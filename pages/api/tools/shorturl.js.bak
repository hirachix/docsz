// pages/api/tools/shorturl.js
import axios from 'axios';
/// pages/api/tools/shorturl.js
import { incrementRequestCount } from '../../../lib/db';

export default async function handler(req, res) {
  if (req.method !== 'GET') {
    return res.status(405).json({
      success: false,
      message: 'Method Not Allowed',
    });
  }

  const { url } = req.query;
  if (!url) {
    return res.status(400).json({
      success: false,
      message: 'Parameter "url" wajib diisi',
    });
  }

  try {
    await incrementRequestCount('shorturl');

    const headers = {
      'User-Agent':
        'Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/138.0.0.0 Safari/537.36',
      'Accept-Encoding': 'gzip, deflate, br, zstd',
      'Content-Type': 'application/x-www-form-urlencoded',
    };

    const body = new URLSearchParams({
      xjxfun: 'create',
      'xjxargs[]': `S<![CDATA[${url}]]>`,
    });

    const r = await fetch('https://n9.cl/en', {
      method: 'POST',
      headers,
      body,
    });

    if (!r.ok) {
      return res.status(500).json({
        success: false,
        message: `Gagal request ke n9.cl (${r.status} ${r.statusText})`,
      });
    }

    const t = await r.text();

    // Gunakan regex lebih luas untuk cari URL pendek
    const match = t.match(/https?:\/\/n9\.cl\/[a-zA-Z0-9_-]+/);
    if (!match) {
      return res.status(500).json({
        success: false,
        message: 'Gagal mendapatkan short URL',
      });
    }

    res.status(200).json({
      success: true,
      original: url,
      short: match[0],
    });
  } catch (error) {
    res.status(500).json({
      success: false,
      message: error.message || 'Terjadi kesalahan',
    });
  }
}